# ----------------------------------------------------------------------------
# ENVIRONMENT
# ----------------------------------------------------------------------------
NODE_ENV=development  # development, staging, production
PORT=3000
API_SERVER_PORT=3000
API_SERVER_HOST=0.0.0.0
API_SERVER_URL=https://localhost:3000

# ----------------------------------------------------------------------------
# SERVICES URLs
# ----------------------------------------------------------------------------
RUST_ENGINE_URL=https://localhost:8002
PYTHON_COLLECTOR_URL=https://localhost:8001

# ----------------------------------------------------------------------------
# BLOCKCHAIN RPC ENDPOINTS
# ----------------------------------------------------------------------------
# Mainnets
ETHEREUM_RPC_URL=https://eth.llamarpc.com
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io
RPC_URL=https://eth-mainnet.public.blastapi.io  # Alias para ETHEREUM_RPC_URL
CHAIN_ID=1

# Testnets
SEPOLIA_RPC_URL=https://rpc.sepolia.org
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545

# ----------------------------------------------------------------------------
# ORACLE ENDPOINTS
# ----------------------------------------------------------------------------
# Pyth Network
PYTH_ENDPOINT=https://hermes.pyth.network
PYTH_WS_ENDPOINT=wss://hermes.pyth.network/ws

# Binance API
BINANCE_API_ENDPOINT=https://api.binance.com

# CoinGecko API
COINGECKO_API_ENDPOINT=https://api.coingecko.com/api/v3
COINGECKO_API_KEY=  # Opcional para Pro

# ----------------------------------------------------------------------------
# ARBITRAGE PARAMETERS
# ----------------------------------------------------------------------------
MIN_PROFIT_THRESHOLD=0.5  # %
MAX_SLIPPAGE=0.5  # %
MAX_BATCH_SIZE=40  # operaciones
GAS_PRICE_MULTIPLIER=1.15
PRICE_UPDATE_INTERVAL=5  # segundos
OPPORTUNITY_CHECK_INTERVAL=1  # segundos
MIN_ORACLE_CONFIDENCE=0.8
MAX_PRICE_DEVIATION=2  # %
MIN_ORACLES_REQUIRED=2
TRANSACTION_DEADLINE=60  # segundos

# ----------------------------------------------------------------------------
# CIRCUIT BREAKER & AUTO-RECOVERY
# ----------------------------------------------------------------------------
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_THRESHOLD=5  # fallos consecutivos
CIRCUIT_BREAKER_COOLDOWN=60  # segundos
ENABLE_AUTO_RECOVERY=true
HEALTH_CHECK_INTERVAL=60  # segundos

# ----------------------------------------------------------------------------
# EXECUTION SETTINGS
# ----------------------------------------------------------------------------
MAX_CONCURRENT_OPERATIONS=40
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_MS=5000
CACHE_TTL=30  # segundos

# ----------------------------------------------------------------------------
# LOGGING & MONITORING
# ----------------------------------------------------------------------------
ENABLE_LOGGING=true
LOG_LEVEL=info  # debug, info, warn, error
LOG_TO_EXCEL=true  # Escribir logs a hoja LOGERRORESEVENTOS

# ----------------------------------------------------------------------------
# ALERTS
# ----------------------------------------------------------------------------
ALERT_WEBHOOK_URL=

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord
DISCORD_WEBHOOK_URL=

# ----------------------------------------------------------------------------
# PRIVATE KEYS (⚠️ NUNCA COMMITEAR AL REPOSITORIO)
# ----------------------------------------------------------------------------
PRIVATE_KEY=  # NUNCA COMMITEAR ESTO - Usar en .env local o secrets

# Por chain (opcional)
PRIVATE_KEY_ETHEREUM=
PRIVATE_KEY_POLYGON=
PRIVATE_KEY_BSC=
PRIVATE_KEY_AVALANCHE=
PRIVATE_KEY_ARBITRUM=
PRIVATE_KEY_OPTIMISM=
PRIVATE_KEY_SOLANA=

# ----------------------------------------------------------------------------
# SMART CONTRACT ADDRESSES
