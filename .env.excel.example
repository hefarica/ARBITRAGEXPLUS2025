ARBITRAGE_MANAGER_POLYGON=
ARBITRAGE_MANAGER_BSC=
ARBITRAGE_MANAGER_AVALANCHE=
ARBITRAGE_MANAGER_ARBITRUM=
ARBITRAGE_MANAGER_OPTIMISM=

# ----------------------------------------------------------------------------
# DATABASE & CACHE
# ----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/arbitragex
REDIS_URL=redis://localhost:6379

# ----------------------------------------------------------------------------
# SECURITY
# ----------------------------------------------------------------------------
# Rate limiting
RATE_LIMIT_WINDOW_MS=60000  # 1 minuto
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*  # En producción, especificar dominios permitidos

# ----------------------------------------------------------------------------
# DASHBOARD
# ----------------------------------------------------------------------------
DASHBOARD_PORT=3001
DASHBOARD_UPDATE_INTERVAL=10000  # ms

