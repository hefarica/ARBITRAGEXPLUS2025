# Logging
LOG_LEVEL=info

# Google Sheets
GOOGLE_SHEETS_SPREADSHEET_ID=YOUR_SPREADSHEET_ID
GOOGLE_SHEETS_CREDENTIALS_PATH=../../credentials/gsheets-sa.json

# WebSocket URLs (for real-time monitoring)
SEPOLIA_WS_URL=wss://ethereum-sepolia.publicnode.com
BSC_TESTNET_WS_URL=wss://bsc-testnet.publicnode.com
MUMBAI_WS_URL=wss://polygon-mumbai-bor.publicnode.com

# RPC URLs (fallback)
SEPOLIA_RPC_URL=https://rpc.sepolia.org
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Contract Addresses
ARBITRAGE_MANAGER_SEPOLIA=0x0000000000000000000000000000000000000000
ARBITRAGE_MANAGER_BSC_TESTNET=0x0000000000000000000000000000000000000000
ARBITRAGE_MANAGER_MUMBAI=0x0000000000000000000000000000000000000000

# Alert Channels
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_CHAT_ID
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Email Alerts
EMAIL_ENABLED=false
EMAIL_FROM=alerts@arbitragexplus.com
EMAIL_TO=admin@arbitragexplus.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
MAX_ALERTS_PER_MINUTE=10
ALERT_RATE_LIMIT_WINDOW_MS=60000

# Reconnection
MAX_RECONNECT_ATTEMPTS=10
RECONNECT_DELAY_MS=5000

