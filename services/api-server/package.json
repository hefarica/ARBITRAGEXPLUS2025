{
  "name": "@arbitragexplus2025/api-server",
  "version": "1.0.0",
  "description": "TypeScript API Server para ARBITRAGEXPLUS2025 - Sistema de Arbitraje DeFi AutÃ³nomo",
  "type": "module",
  "main": "dist/server.js",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "tsx src/db/reset.ts",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "docker:build": "docker build -t arbitragexplus2025-api-server .",
    "docker:run": "docker run -p 3000:3000 arbitragexplus2025-api-server"
  },
  "dependencies": {
    "@fastify/compress": "^6.5.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/websocket": "^8.3.1",
    "@prisma/client": "^5.7.1",
    "@sinclair/typebox": "^0.31.28",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bullmq": "^4.15.0",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "fastify": "^4.24.3",
    "google-spreadsheet": "^4.1.2",
    "googleapis": "^128.0.0",
    "helmet": "^7.1.0",
    "inquirer": "^9.2.12",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "p-limit": "^5.0.0",
    "p-queue": "^7.4.1",
    "pg": "^8.11.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "prisma": "^5.7.1",
    "ramda": "^0.29.1",
    "retry": "^0.13.1",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "table": "^6.8.1",
    "uuid": "^9.0.1",
    "web3": "^4.2.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.21",
    "@types/pg": "^8.10.9",
    "@types/ramda": "^0.29.8",
    "@types/retry": "^0.12.5",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "arbitrage",
    "defi",
    "typescript",
    "api-server",
    "express",
    "fastify",
    "websockets",
    "ethereum",
    "google-sheets",
    "redis",
    "postgresql"
  ],
  "author": {
    "name": "MANU",
    "email": "manu@arbitragexplus2025.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hefarica/ARBITRAGEXPLUS2025.git",
    "directory": "services/api-server"
  },
  "homepage": "https://github.com/hefarica/ARBITRAGEXPLUS2025#readme",
  "bugs": {
    "url": "https://github.com/hefarica/ARBITRAGEXPLUS2025/issues"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@config/(.*)$": "<rootDir>/src/config/$1",
      "^@controllers/(.*)$": "<rootDir>/src/controllers/$1",
      "^@services/(.*)$": "<rootDir>/src/services/$1",
      "^@lib/(.*)$": "<rootDir>/src/lib/$1"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  },
  "config": {
    "server": {
      "port": 3000,
      "host": "0.0.0.0",
      "cors": true,
      "compression": true,
      "security": true
    },
    "database": {
      "type": "postgresql",
      "poolSize": 20,
      "timeout": 30000
    },
    "redis": {
      "host": "localhost",
      "port": 6379,
      "ttl": 300
    },
    "websocket": {
      "enabled": true,
      "port": 3001,
      "pingInterval": 30000
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 1000,
      "skipSuccessfulRequests": true
    },
    "logging": {
      "level": "info",
      "format": "json",
      "maxFiles": "14d",
      "maxSize": "20m"
    }
  },
  "arbitragexplus2025": {
    "service": {
      "name": "api-server",
      "type": "typescript",
      "category": "core-service",
      "dependencies": [
        "google-sheets",
        "redis",
        "postgresql",
        "rust-engine",
        "python-collector"
      ],
      "endpoints": {
        "health": "/health",
        "metrics": "/metrics",
        "api": "/api/v1"
      },
      "websockets": {
        "priceStream": "/ws/prices",
        "executionStream": "/ws/executions",
        "alertStream": "/ws/alerts"
      }
    },
    "integrations": {
      "googleSheets": {
        "enabled": true,
        "spreadsheetId": "${SPREADSHEET_ID}",
        "updateInterval": 30
      },
      "blockchain": {
        "ethereum": true,
        "polygon": true,
        "bsc": true,
        "avalanche": true
      },
      "oracles": {
        "pyth": true,
        "chainlink": true,
        "defillama": true
      }
    },
    "features": {
      "realTimePricing": true,
      "arbitrageExecution": true,
      "portfolioTracking": true,
      "riskManagement": true,
      "alertSystem": true,
      "performanceAnalytics": true
    },
    "scaling": {
      "horizontal": true,
      "clustering": false,
      "loadBalancing": true,
      "caching": true
    }
  },
  "volta": {
    "node": "18.19.0",
    "pnpm": "8.15.0"
  },
  "packageManager": "pnpm@8.15.0",
  "exports": {
    ".": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./types": {
      "import": "./dist/lib/types.js",
      "types": "./dist/lib/types.d.ts"
    },
    "./config": {
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts",
    "README.md",
    "CHANGELOG.md"
  ]
}